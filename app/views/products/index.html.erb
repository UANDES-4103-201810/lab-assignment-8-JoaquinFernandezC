<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Price</th>
      <th colspan="3">Options</th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.weight %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', [product.user, product] %></td>
        <td><%= link_to 'Edit', edit_user_product_path(product.user, product) %></td>
        <td><%= link_to 'Destroy', [product.user, product], method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Product', new_user_product_path %>
  <%= link_to 'Back', user_path(@user) %>

</div>

